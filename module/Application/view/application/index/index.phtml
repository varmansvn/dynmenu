<script>

    $(document).ready(function() {

        $.ajax({
            url: "/menu/tojson",
            headers: {
                "Accept": "application/json"
            },
            type: "get",
            success: function(data) {
                var menus = data.menus;
                var menubar = $("#menu-bar");
                for (var idi in menus) {
                    var li = "<li><a href='" + menus[idi].url + "'>" + menus[idi].menu_name + "</a></li>"
                    menubar.append(li);
                }
            },
            error: function(xhr, status, thrown) {
                console.log(xhr);
            }

        });


    });

</script>